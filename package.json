{
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "format": "prettier --write '*.{js,yml,yaml,json,graphql}' '{frontend,scripts}/**/*.{js,ts,tsx,yml,yaml,json,graphql}'",
    "lint": "tslint --project tsconfig.json -c tslint.json -t codeFrame {frontend,scripts}/**/*.ts{,x}",
    "typecheck:watch": "tsc --watch --noEmit",
    "typecheck": "NODE_OPTIONS=--max_old_space_size=4096 tsc --noEmit",
    "test": "yarn jest",
    "coverage:ci": "yarn codecov",
    "postinstall": "lerna run compile",
    "site:dev": "yarn workspace @site/app dev"
  },
  "devDependencies": {
    "@aunited/beholder-cli": "^1.1.0",
    "@aunited/beholder-formatter-jest": "^1.4.0",
    "@aunited/beholder-formatter-tsc": "^1.5.1",
    "@aunited/beholder-formatter-tslint": "^1.1.0",
    "@commitlint/config-conventional": "7.6.0",
    "@commitlint/config-lerna-scopes": "7.6.0",
    "babel-eslint": "10.0.1",
    "codecov": "3.4.0",
    "commitizen": "3.1.1",
    "concurrently": "4.1.0",
    "cz-conventional-changelog": "2.1.0",
    "cz-lerna-changelog": "2.0.2",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.13.0",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lerna": "3.14.1",
    "lint-staged": "8.1.7",
    "prettier": "1.17.1",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.17.0"
  },
  "workspaces": [
    "frontend/**/*",
    "scripts/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
